<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
		
		<item name="actionBarStyle">@style/Widget.AppTheme.ActionBar</item>
	    <item name="android:actionBarStyle">@style/Widget.AppTheme.ActionBar</item>
        
	    <item name="actionBarTabTextStyle">@style/Widget.AppTheme.TabText</item>
		<item name="android:actionBarTabTextStyle">@style/Widget.AppTheme.TabText</item>
		
		<item name="actionBarTabBarStyle">@style/Widget.AppTheme.TabBar</item>
		<item name="android:actionBarTabBarStyle">@style/Widget.AppTheme.TabBar</item>
		
        <item name="android:icon">@drawable/ic_launcher</item>
    </style>

    <style name="Widget" />
    
     <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleMessageTile">
        <item name="android:background">@drawable/ic_launcher</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDy">-3.5</item>
        <item name="android:shadowRadius">2</item>
    </style>
	
	<style name="Widget.AppTheme.ActionBar" parent="@style/Widget.Sherlock.ActionBar">
	    <item name="android:background">#e16666</item>
	    <item name="background">#e16666</item>	
	    <item name="android:textColor">#233243</item>
        <item name="android:titleTextStyle">@style/Widget.AppTheme.ActionBar.TitleTextStyle</item>
	</style>
	
	
	<style name="Widget.AppTheme.TabText" parent="@style/Widget.Sherlock.ActionBar.TabText">       
	    <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
	    <item name="android:textSize">13sp</item>
	    <item name="android:textColor">#333333</item>
	    <item name="android:textAllCaps">false</item>
	    <item name="android:gravity">center</item>
	    <item name="android:maxLines">1</item>
	</style>
    
	<style name="Widget.AppTheme.TabBar" parent="@style/Widget.Sherlock.ActionBar.TabBar">
	    <item name="android:background">#fafafa</item>   
	</style>
	
	<style name="Widget.AppTheme.TabView" parent="@style/Widget.Sherlock.ActionBar.TabView">
	    <item name="android:background">#eeeeee</item>   
	</style>
	
	<style name="Widget.AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#ffffff</item>
  </style>
	
</resources>
